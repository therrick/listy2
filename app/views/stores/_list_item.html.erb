<tr class="item_list needed">
  <td class="action">
    <%= link_to fa_icon('check'), mark_purchased_store_item_path(@store.id, list_item.id),
        :method => :post %>
  </td>
  <td class="name">
    <%= list_item.name %>
    <%= list_item.number_needed > 1 ? "(x#{list_item.number_needed})" : ""%>
  </td>
  <td class="aisle"><%= aisle_link(list_item) %></td>
  <td class="notes"><%= truncate(list_item.notes) %></td>
  <td class="more_actions">
    <%= link_to fa_icon('plus'),
          add_needed_store_item_path(@store.id, list_item.id), 
          :method => :post %>
    <%= link_to fa_icon('minus'),
          subtract_needed_store_item_path(@store.id, list_item.id), 
          :method => :post %>
    <%= link_to fa_icon('edit'), edit_store_item_path(@store.id, list_item.id) %>
  </td>
</tr>
