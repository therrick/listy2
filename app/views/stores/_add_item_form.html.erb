<%= simple_form_for [@store, Item.new] do |f| %>
  <div class="row">
    <div class="col-sm-5">
      <%= f.input :name,
                  label: false,
                  placeholder: 'Add/Search',
                  input_html: { autocomplete: :off } %>
    </div>
    <div class="col-sm-3">
      <%= f.submit "add item", class: "button" %>
    </div>
  </div>
<% end %>
