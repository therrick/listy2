<h2>edit <%= @aisle.name %></h2>

<%= simple_form_for [@store, @aisle] do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :description %>
  </div>
  <div class="form-actions">
    <%= f.submit class: 'button' %>
  </div>
<% end %>

<%= link_to 'cancel', stores_path %>
